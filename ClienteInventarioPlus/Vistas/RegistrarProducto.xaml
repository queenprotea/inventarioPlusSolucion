<UserControl
    Background="WhiteSmoke"
    Loaded="UserControl_Loaded"
    d:DesignHeight="700"
    d:DesignWidth="1170"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.RegistrarProductoVista"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Foreground="#333"
            Grid.Row="0"
            Margin="0,0,0,20"
            Text="Registrar Producto" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Nombre del producto:" />
                <TextBox
                    FontSize="14"
                    Padding="5"
                    x:Name="TxtNombreProducto" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <Label Content="Precio de compra:" />
                <TextBox
                    FontSize="14"
                    Padding="5"
                    x:Name="TxtPrecioCompra" />
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10,0,10,0">
                <Label Content="Precio de venta:" />
                <TextBox
                    FontSize="14"
                    Padding="5"
                    x:Name="TxtPrecioVenta" />
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10,0,0,0">
                <Label Content="Código de identificación:" />
                <TextBox
                    FontSize="14"
                    Padding="5"
                    x:Name="TxtCodigo" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Descripción:" />
                <TextBox
                    AcceptsReturn="True"
                    FontSize="14"
                    Height="120"
                    Padding="5"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    x:Name="TxtDescripcion" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Label Content="Categoría:" />
                <ComboBox
                    FontSize="14"
                    Margin="0,0,0,10"
                    Padding="5"
                    x:Name="CmbCategoria" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Stock Inicial:" />
                        <TextBox
                            FontSize="14"
                            Padding="5"
                            x:Name="TxtStockInicial" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Stock Mínimo:" />
                        <TextBox
                            FontSize="14"
                            Padding="5"
                            x:Name="TxtStockMinimo" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <TextBlock
            FontSize="20"
            FontWeight="SemiBold"
            Grid.Row="3"
            Margin="0,5,0,0"
            Text="Proveedores Asociados" />
        <ComboBox
            FontSize="14"
            Grid.Row="4"
            Height="28"
            Margin="0,2,500,0"
            Padding="2"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            x:Name="cmbProveedores" />
        <StackPanel
            Grid.Row="5"
            HorizontalAlignment="Left"
            Margin="0,10,0,10"
            Orientation="Horizontal">
            <Button
                Background="SlateGray"
                BorderThickness="0"
                Click="BtnAgregar_Click"
                Content="Agregar"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,10,0"
                Padding="20,10"
                x:Name="BtnAgregar" />
            <Button
                Background="LightGray"
                BorderThickness="0"
                Click="BtnEliminar_Click"
                Content="Eliminar"
                Padding="20,10"
                x:Name="BtnEliminar" />
        </StackPanel>

        <DataGrid
            AlternatingRowBackground="LightGray"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            Grid.Row="6"
            Height="200"
            IsReadOnly="True"
            x:Name="DgProveedores">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Nombre}"
                    Header="Nombre"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding Telefono}"
                    Header="Teléfono"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding Direccion}"
                    Header="Direccion"
                    Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="7"
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Button
                Background="Black"
                BorderThickness="0"
                Click="BtnGuardar_Click"
                Content="Guardar"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,10,0"
                Padding="20,10"
                x:Name="BtnGuardar" />
            <Button
                Background="LightGray"
                BorderThickness="0"
                Click="BtnCancelar_Click"
                Content="Cancelar"
                Padding="20,10"
                x:Name="BtnCancelar" />
        </StackPanel>
    </Grid>
</UserControl>