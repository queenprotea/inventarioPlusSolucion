<UserControl x:Class="ClienteInventarioPlus.Vistas.MenuProveedoresAdministrador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">
    <Grid Margin="32,24,32,24" ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Gestión de Proveedores"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,32"/>

        <!-- Cards de navegación -->
        <Grid Grid.Row="1" VerticalAlignment="Center" ClipToBounds="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Registrar -->
            <Border Grid.Row="0" Grid.Column="0"
                    Style="{StaticResource Card}">
                <Button Style="{StaticResource DashboardButton}"
                        Click="BtnRegistrar_Click">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AccountPlusOutline" 
                                                   Style="{StaticResource PrimaryIcon}"
                                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Registrar Proveedor" 
                                   Style="{StaticResource CardTitleText}"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Agregar un nuevo proveedor al sistema" 
                                   Style="{StaticResource CardDescriptionText}"
                                   MaxWidth="220"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Card Consultar -->
            <Border Grid.Row="0" Grid.Column="2"
                    Style="{StaticResource Card}">
                <Button Style="{StaticResource DashboardButton}"
                        Click="BtnConsultar_Click">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AccountSearchOutline" 
                                                   Style="{StaticResource PrimaryIcon}"
                                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Consultar Proveedores" 
                                   Style="{StaticResource CardTitleText}"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Ver lista de todos los proveedores" 
                                   Style="{StaticResource CardDescriptionText}"
                                   MaxWidth="220"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Card Modificar -->
            <Border Grid.Row="2" Grid.Column="0"
                    Style="{StaticResource Card}">
                <Button Style="{StaticResource DashboardButton}"
                        Click="BtnModificar_Click">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AccountEditOutline" 
                                                   Style="{StaticResource PrimaryIcon}"
                                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Modificar Proveedor" 
                                   Style="{StaticResource CardTitleText}"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Editar datos de un proveedor existente" 
                                   Style="{StaticResource CardDescriptionText}"
                                   MaxWidth="220"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Card Eliminar -->
            <Border Grid.Row="2" Grid.Column="2"
                    Style="{StaticResource Card}">
                <Button Style="{StaticResource DashboardButton}"
                        Click="BtnEliminar_Click">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AccountRemoveOutline" 
                                                   Style="{StaticResource DangerIcon}"
                                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Eliminar Proveedor" 
                                   Style="{StaticResource CardTitleText}"
                                   TextAlignment="Center"
                                   Foreground="{StaticResource ErrorColor}"/>
                        <TextBlock Text="Eliminar un proveedor del sistema" 
                                   Style="{StaticResource CardDescriptionText}"
                                   MaxWidth="220"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
    </Grid>
</UserControl>
