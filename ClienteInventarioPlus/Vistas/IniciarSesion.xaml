<UserControl x:Class="ClienteInventarioPlus.Vistas.IniciarSesion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1440">
    <Grid Background="{StaticResource BackgroundColor}">
        <!-- Logo y Título del Sistema -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <TextBlock x:Name="tblockNombreSistema" 
                       Text="InventarioPlus" 
                       FontSize="72" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryColor}" 
                       TextAlignment="Center" />
        </StackPanel>

        <!-- Card de Login -->
        <Border Style="{StaticResource Card}" 
                Width="520"
                Margin="0,180,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Margin="0,0,0,32">
                    <TextBlock x:Name="tblockTitulo" 
                               Text="Iniciar Sesión" 
                               Style="{StaticResource TitleText}"
                               TextAlignment="Center"
                               Margin="0,0,0,8" />
                    <TextBlock x:Name="tblockSubtitulo" 
                               Text="Introduce tu nombre de usuario y contraseña" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryColor}" 
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Formulario -->
                <StackPanel Grid.Row="1">
                    <!-- Campo Usuario -->
                    <Label Content="Nombre de Usuario" 
                           Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="tbUserName" 
                             Height="44"
                             Style="{StaticResource ModernTextBox}"
                             FontSize="16"
                             Margin="0,0,0,4"/>
                    <TextBlock x:Name="tblockErrorUserName" 
                               Text="" 
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,16"/>

                    <!-- Campo Contraseña -->
                    <Label Content="Contraseña" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,8,0,0"/>
                    <Grid Margin="0,0,0,4">
                        <PasswordBox x:Name="pbPassword" 
                                     Height="44"
                                     Style="{StaticResource ModernPasswordBox}"
                                     FontSize="16"
                                     Visibility="Visible"/>
                        <TextBox x:Name="tbPasswordVisible" 
                                 Height="44"
                                 Style="{StaticResource ModernTextBox}"
                                 FontSize="16"
                                 Visibility="Collapsed"/>
                        <Button x:Name="btnVerPassword" 
                                Width="40" 
                                Height="40" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0"
                                Content="👁"
                                Style="{StaticResource SecondaryButton}"
                                Padding="8"
                                Click="btnVerPassword_Click"/>
                    </Grid>
                    <TextBlock x:Name="tblockErrorPassword" 
                               Text="" 
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,24"/>

                    <!-- Botón de Login -->
                    <Button x:Name="btnIniciarSesion" 
                            Content="Iniciar Sesión"
                            Style="{StaticResource PrimaryButton}"
                            Height="48" 
                            FontSize="16"
                            Click="btnIniciarSesion_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
