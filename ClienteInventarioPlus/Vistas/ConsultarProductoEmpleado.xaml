<UserControl x:Class="ClienteInventarioPlus.Vistas.ConsultarProductoEmpleado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="{StaticResource BackgroundColor}"
             Loaded="UserControl_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Consultar Productos" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TxtBusqueda" 
                     Grid.Column="0" 
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14" 
                     Height="40"
                     ToolTip="Escriba aquí para buscar..."/>

            <ComboBox x:Name="CmbFiltro" 
                      Grid.Column="1" 
                      Style="{StaticResource ModernComboBox}"
                      Margin="16,0" 
                      MinWidth="180"
                      Height="40">
                <ComboBoxItem Content="Buscar por Nombre"/>
                <ComboBoxItem Content="Buscar por Código"/>
                <ComboBoxItem Content="Buscar por Categoría"/>
            </ComboBox>

            <Button x:Name="BtnBuscar" 
                    Grid.Column="2" 
                    Content="Buscar" 
                    Style="{StaticResource PrimaryButton}"
                    Height="40"
                    Click="BtnBuscar_Click"/>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2" 
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="DgProductos" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                    <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="1*"/>
                    <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVenta, StringFormat={}{0:C}}" Width="Auto"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="Auto"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                    <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor.Nombre}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Paginación -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,24,0,0">
            <Button Content="&lt;&lt;" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="4,0"
                    Width="40"
                    Height="40"/>
            <Button Content="1" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="4,0"
                    Width="40"
                    Height="40"/>
            <Button Content="2" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="4,0"
                    Width="40"
                    Height="40"/>
            <Button Content="3" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="4,0"
                    Width="40"
                    Height="40"/>
            <TextBlock Text="..." 
                       Margin="8,0" 
                       VerticalAlignment="Center"
                       Style="{StaticResource BodyText}"/>
            <Button Content="&gt;&gt;" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="4,0"
                    Width="40"
                    Height="40"/>
        </StackPanel>

    </Grid>
</UserControl>