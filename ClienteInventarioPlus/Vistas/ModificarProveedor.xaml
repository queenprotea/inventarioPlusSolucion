<UserControl
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ModificarProveedor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <StackPanel
            Grid.ColumnSpan="2"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,50,0,10">
            <TextBlock
                FontSize="34"
                FontWeight="Bold"
                Foreground="Black"
                Text="Modificar Usuario"
                TextAlignment="Center" />
        </StackPanel>

        <!--  Columna de campos  -->
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="80,0,80,30">
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Margin="0,20,0,5"
                Text="Nombre" />
            <TextBox
                FontSize="20"
                Padding="10,20,10,10"
                x:Name="tbNombre" />
            <TextBlock
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="Red"
                Margin="0,0,0,10"
                Text=""
                x:Name="tblockErrorNombre" />

            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Text="Telefono" />
            <TextBox
                FontSize="20"
                Padding="10,20,10,10"
                x:Name="tbTelefono" />
            <TextBlock
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="Red"
                Text=""
                x:Name="tblockErrorUserName" />

            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Text="Correo" />
            <TextBox
                FontSize="20"
                Padding="10,20,10,10"
                x:Name="tbCorreo" />
            <TextBlock
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="Red"
                Text=""
                x:Name="tblockErrorCorreo" />

            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Text="Direccion" />
            <TextBox
                FontSize="20"
                Padding="10,20,10,10"
                x:Name="tbDireccion" />
            <TextBlock
                FontSize="12"
                FontWeight="SemiBold"
                Foreground="Red"
                Text=""
                x:Name="tblockErrorDireccion" />


        </StackPanel>
        <!--  Botones  -->
        <StackPanel
            Grid.ColumnSpan="2"
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="0,0,20,20"
            Orientation="Horizontal">
            <Button
                Background="#FFC3C3C3"
                Click="btnCancelar_Click"
                Content="Cancelar"
                FontSize="30"
                Height="70"
                Margin="10,0"
                Width="250" />
            <Button
                Background="Black"
                BorderBrush="Black"
                Click="btnModificarUsuario_Click"
                Content="Modificar"
                FontSize="30"
                Foreground="White"
                Margin="10,0"
                Width="250" />
        </StackPanel>
    </Grid>
</UserControl>
