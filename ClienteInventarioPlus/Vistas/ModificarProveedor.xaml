<UserControl
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ModificarProveedor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundColor}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Modificar Proveedor"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,32"/>

        <!-- Formulario en Card con ScrollViewer -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Border Style="{StaticResource Card}"
                    MaxWidth="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,0,0,24">
                <StackPanel>
                    <!-- Campo Nombre -->
                    <Label Content="Nombre"
                           Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="tbNombre"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,4"/>
                    <TextBlock x:Name="tblockErrorNombre"
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,16"/>

                    <!-- Campo Teléfono -->
                    <Label Content="Teléfono"
                           Style="{StaticResource FormLabel}"
                           Margin="0,8,0,0"/>
                    <TextBox x:Name="tbTelefono"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,4"/>
                    <TextBlock x:Name="tblockErrorUserName"
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,16"/>

                    <!-- Campo Correo -->
                    <Label Content="Correo electrónico"
                           Style="{StaticResource FormLabel}"
                           Margin="0,8,0,0"/>
                    <TextBox x:Name="tbCorreo"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,4"/>
                    <TextBlock x:Name="tblockErrorCorreo"
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,16"/>

                    <!-- Campo Dirección -->
                    <Label Content="Dirección"
                           Style="{StaticResource FormLabel}"
                           Margin="0,8,0,0"/>
                    <TextBox x:Name="tbDireccion"
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,4"/>
                    <TextBlock x:Name="tblockErrorDireccion"
                               Style="{StaticResource ErrorText}"
                               Margin="0,0,0,24"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">
                        <Button Content="Regresar"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"
                                Click="btnCancelar_Click"/>
                        <Button Content="Modificar"
                                Style="{StaticResource PrimaryButton}"
                                Click="btnModificarUsuario_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
