<UserControl x:Class="ClienteInventarioPlus.Vistas.ProductoPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Background="White">
        <Button Background="#FFF0F0F0" Foreground="Black" FontSize="20" HorizontalContentAlignment="Left" Margin="39,37,650,365" Click="btnRegistrarProducto_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Width="425">
                <TextBlock Text="Registrar Producto" VerticalAlignment="Top" Margin="15,0,110,0" FontSize="30"/>
                <Image Source="/Imagenes/RegistrarProductoLogo.jpg" Width="80" Height="80" Margin="10,50,90,0"/>
            </StackPanel>
        </Button>

        <Button Background="#FFF0F0F0" Foreground="Black" FontSize="20" HorizontalContentAlignment="Left" Margin="650,37,39,365" Click="btnConsultarProductos_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Width="425">
                <TextBlock Text="Consultar Productos" VerticalAlignment="Top" Margin="15,0,0,0" FontSize="30"/>
                <Image Source="/Imagenes/ConsultarProductoLogo.jpg" Width="80" Height="80" Margin="90,50,10,0"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
