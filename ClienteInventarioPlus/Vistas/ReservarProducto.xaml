<UserControl x:Class="ClienteInventarioPlus.Vistas.ReservarProductoVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Reserva de Producto" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,15"/>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtBusqueda" Grid.Column="0" Padding="5" FontSize="14" VerticalContentAlignment="Center" ToolTip="Escriba aquí para buscar..."/>
            <ComboBox x:Name="CmbFiltro" Grid.Column="1" Margin="10,0" Padding="5" VerticalContentAlignment="Center" MinWidth="150">
                <ComboBoxItem Content="Buscar por Nombre"/>
                <ComboBoxItem Content="Buscar por Categoría"/>
            </ComboBox>
            <Button x:Name="BtnBuscar" Grid.Column="2" Content="Buscar" Padding="20,5" Click="BtnBuscar_Click"/>
        </Grid>

        <DataGrid Grid.Row="2" x:Name="DgProductos" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" AlternatingRowBackground="LightGray"
                  SelectionMode="Single"
                  SelectionChanged="DgProductos_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="3*"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="2*"/>
                <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVenta, StringFormat={}{0:C}}" Width="1*"/>
                <DataGridTextColumn Header="Stock Actual" Binding="{Binding Stock}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnSeleccionar" Content="Seleccionar Producto" Padding="20,8"
                    IsEnabled="False" Click="BtnSeleccionar_Click"
                    ToolTip="Seleccione un producto de la lista para continuar"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Margin="10,0,0,0" Padding="20,8" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>