<UserControl x:Class="ClienteInventarioPlus.Vistas.LiberarReserva"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <!-- Definimos 3 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Buscador + combo -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Botón regresar -->
        </Grid.RowDefinitions>

        <!-- Fila 0-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Liberar Reserva" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#23272F" 
                       TextAlignment="Left" />
        </StackPanel>

        <!-- Fila 1: DataGrid -->
        <DataGrid x:Name="dgReservas" AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="20"
                  ItemsSource="{Binding reservas}"
                  Grid.Row="1" BorderBrush="White" GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="LightGray"
                  RowBackground="White"
                  AlternatingRowBackground="White"
                  HeadersVisibility="Column"
                  FontSize="15">
            
            <DataGrid.Columns>
                <!-- Columnas de texto -->
                <DataGridTextColumn Header="ID" Binding="{Binding ReservaID}" Width="0.25*" />
                <DataGridTextColumn Header="Numero de Reserva" Binding="{Binding NumeroReserva}" Width="*"/>
                <DataGridTextColumn Header="ProductoID" Binding="{Binding ProductoID}" Width="*"/>
                <DataGridTextColumn Header="Cantidad Reservada" Binding="{Binding CantidadReservada}" Width="*"/>
                <DataGridTextColumn Header="FechaHora" Binding="{Binding FechaHora}" Width="*"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Fila 2: Botón Regresar -->
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="Seleccionar reserva" Width="200" Height="50" FontSize="20" Click="btnLiberarReserva_Click" HorizontalAlignment="Left" Margin="20,0,770,0" Background="IndianRed" Foreground="White"/>
            <Button Content="Cancelar" Width="150" Height="50" FontSize="20" Click="btnRegresar_Click" HorizontalAlignment="Right"/>
        </StackPanel>
        
    </Grid>
</UserControl>
