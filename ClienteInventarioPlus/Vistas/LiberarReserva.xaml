<UserControl x:Class="ClienteInventarioPlus.Vistas.LiberarReserva"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Liberar Reserva" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,24"/>

        <!-- DataGrid -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="dgReservas" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}"
                      ItemsSource="{Binding reservas}">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ReservaID}" Width="0.25*" />
                    <DataGridTextColumn Header="Número de Reserva" Binding="{Binding NumeroReserva}" Width="*"/>
                    <DataGridTextColumn Header="ProductoID" Binding="{Binding ProductoID}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad Reservada" Binding="{Binding CantidadReservada}" Width="*"/>
                    <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaHora}" Width="*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Button Style="{StaticResource DangerButton}"
                    Content="Seleccionar reserva" 
                    Click="btnLiberarReserva_Click" 
                    HorizontalAlignment="Left"/>
            <Button Style="{StaticResource SecondaryButton}"
                    Content="Cancelar" 
                    Click="btnRegresar_Click" 
                    HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>
