<UserControl x:Class="ClienteInventarioPlus.Vistas.HistorialMovimientos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Historial de Movimientos"
                   Style="{StaticResource TitleText}"
                   Grid.Row="0"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtBuscar" 
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Height="40"
                     Grid.Column="0"
                     Margin="0,0,16,0"
                     ToolTip="Buscar movimiento..."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Ordenar por:" 
                           Style="{StaticResource BodyText}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="cmbOrdenar" 
                          Style="{StaticResource ModernComboBox}"
                          FontSize="14"
                          Height="40"
                          MinWidth="180"
                          SelectionChanged="cmbOrdenar_SelectionChanged">
                    <ComboBoxItem Content="ID"/>
                    <ComboBoxItem Content="FechaHora"/>
                    <ComboBoxItem Content="Tipo de movimiento"/>
                    <ComboBoxItem Content="Cantidad"/>
                </ComboBox>
                <Button Style="{StaticResource PrimaryButton}"
                        Click="btnBuscar_Click"
                        Content="Buscar"
                        Height="40"
                        Margin="16,0,0,0"
                        Padding="24,10"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="dgMovimientos" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}"
                      ItemsSource="{Binding movimientos}">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MovimientoID}" Width="0.25*" />
                    <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaHora}" Width="*"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioDisplay}" Width="*"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding ProductoDisplay}" Width="*"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding TipoMovimiento}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <Grid Grid.Row="3" Margin="0,24,0,0">
            <Button Style="{StaticResource DangerButton}"
                    Content="Anular movimiento" 
                    Click="btnAnular_Click" 
                    HorizontalAlignment="Left"/>
            <Button Style="{StaticResource SecondaryButton}"
                    Content="Regresar" 
                    Click="btnRegresar_Click" 
                    HorizontalAlignment="Right"/>
        </Grid>
        
    </Grid>
</UserControl>
