<UserControl x:Class="ClienteInventarioPlus.Vistas.RegistrarSalida"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Registrar Salida" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtBuscar" 
                     Grid.Column="0"
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Height="40"
                     Margin="0,0,16,0"
                     ToolTip="Buscar producto..."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Ordenar por:" 
                           Style="{StaticResource BodyText}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="cmbOrdenar" 
                          Style="{StaticResource ModernComboBox}"
                          FontSize="14"
                          Height="40"
                          MinWidth="180"
                          SelectionChanged="cmbOrdenar_SelectionChanged">
                    <ComboBoxItem Content="ID"/>
                    <ComboBoxItem Content="Codigo"/>
                    <ComboBoxItem Content="Nombre"/>
                    <ComboBoxItem Content="Stock"/>
                    <ComboBoxItem Content="Stock apartado"/>
                    <ComboBoxItem Content="Stock minimo"/>
                </ComboBox>
                <Button Style="{StaticResource PrimaryButton}"
                        Click="btnBuscar_Click"
                        Content="Buscar"
                        Height="40"
                        Margin="16,0,0,0"
                        Padding="24,10"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="dgProductos" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}"
                      ItemsSource="{Binding Productos}">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductoID}" Width="0.25*" />
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="0.75*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="0.5*"/>
                    <DataGridTextColumn Header="Stock apartado" Binding="{Binding StockApartado}" Width="0.5*"/>
                    <DataGridTextColumn Header="Stock mínimo" Binding="{Binding StockMinimo}" Width="0.5*"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <Grid Grid.Row="3" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="Cantidad del producto:"
                       Style="{StaticResource FormLabel}"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>
                <TextBox x:Name="txtCantidad" 
                         Style="{StaticResource ModernTextBox}"
                         Width="200"
                         Height="40"
                         Margin="0,0,12,0"/>
                <TextBlock x:Name="tblockErrorCantidad" 
                           Style="{StaticResource ErrorText}"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0"
                        Click="btnRegresar_Click"/>
                <Button Content="Aceptar"
                        Style="{StaticResource PrimaryButton}"
                        Click="btnAceptar_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
