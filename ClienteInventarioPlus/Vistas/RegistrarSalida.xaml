<UserControl x:Class="ClienteInventarioPlus.Vistas.RegistrarSalida"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <!-- Definimos 3 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Titulo -->
            <RowDefinition Height="Auto"/> <!-- Buscador + combo -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Botón regresar -->
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <TextBlock Text="Registrar Salida" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#23272F" 
                       TextAlignment="Left" />
        </StackPanel>

        <!-- Fila 1: Buscador y ComboBox -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,0,10">
            <Button Width="40" Height="40" FontSize="16" Click="btnBuscar_Click" BorderThickness="0">
                <Image Source="/Imagenes/busquedaLogo.jpg" Stretch="Uniform"/>
            </Button>
            <TextBox x:Name="txtBuscar" Width="300" Height="40" FontSize="23" Foreground="Gray" Margin="0,0,10,0" />
            <TextBlock Text="Ordenar por:" FontWeight="SemiBold" FontSize="18" Margin="150,0,0,0"/>
            <ComboBox x:Name="cmbOrdenar" Width="200" Height="40" FontSize="16" Margin="10,0,0,0"  SelectionChanged="cmbOrdenar_SelectionChanged">
                <ComboBoxItem Content="ID"/>
                <ComboBoxItem Content="Codigo"/>
                <ComboBoxItem Content="Nombre"/>
                <ComboBoxItem Content="Stock"/>
                <ComboBoxItem Content="Stock apartado"/>
                <ComboBoxItem Content="Stock minimo"/>
            </ComboBox>
        </StackPanel>

        <!-- Fila 2: DataGrid -->
        <DataGrid x:Name="dgProductos" AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="20,30"
                  ItemsSource="{Binding Productos}"
                  Grid.Row="2" BorderBrush="White" GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="LightGray"
                  RowBackground="White"
                  AlternatingRowBackground="White"
                  HeadersVisibility="Column"
                  FontSize="15">
            
            <DataGrid.Columns>
                <!-- Columnas de texto -->
                <DataGridTextColumn Header="ID" Binding="{Binding ProductoID}" Width="0.25*" />
                <DataGridTextColumn Header="Codigo" Binding="{Binding Codigo}" Width="0.75*"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="0.5*"/>
                <DataGridTextColumn Header="Stock apartado" Binding="{Binding StockApartado}" Width="0.5*"/>
                <DataGridTextColumn Header="Stock minimo" Binding="{Binding StockMinimo}" Width="0.5*"/>
                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Fila 3: Botones -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3">
            <TextBlock Text="Cantidad Del producto:" FontWeight="SemiBold" FontSize="18" Margin="0,0,5,0"/>
            <TextBox x:Name="txtCantidad" Width="400" Height="40" FontSize="23" Foreground="Gray" Margin="0,0,10,0" />
            <TextBlock x:Name="tblockErrorCantidad" Text="" FontWeight="SemiBold" FontSize="10" Foreground="Red"/>
            <Button Content="Aceptar" Width="150" Height="50" FontSize="20" Click="btnAceptar_Click" Margin="10,0,10,0" Background="Black" Foreground="White"/>
            <Button Content="Cancelar" Width="150" Height="50" FontSize="20" Click="btnRegresar_Click"/>
        </StackPanel>
        
    </Grid>
</UserControl>
