<UserControl x:Class="ClienteInventarioPlus.Vistas.ProductoAReservarVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="{StaticResource BackgroundColor}"
             Loaded="UserControl_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Detalles del Producto a Reservar" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,32"/>

        <!-- Contenido -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Card de Información del Producto -->
            <Border Grid.Column="0" 
                    Style="{StaticResource Card}"
                    Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Información del Producto" 
                               Style="{StaticResource SubtitleText}"
                               Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" 
                               Content="Nombre:" 
                               Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbNombre" 
                                   Grid.Row="0" Grid.Column="1" 
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource BodyText}"/>

                        <Label Grid.Row="1" Grid.Column="0" 
                               Content="Código:" 
                               Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbCodigo" 
                                   Grid.Row="1" Grid.Column="1" 
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource BodyText}"/>

                        <Label Grid.Row="2" Grid.Column="0" 
                               Content="Descripción:" 
                               Style="{StaticResource FormLabel}" 
                               Margin="0,8,0,0"
                               VerticalAlignment="Top"/>
                        <TextBlock x:Name="TbDescripcion" 
                                   Grid.Row="2" Grid.Column="1" 
                                   TextWrapping="Wrap" 
                                   Margin="0,8,0,0" 
                                   Style="{StaticResource BodyText}"/>

                        <Label Grid.Row="3" Grid.Column="0" 
                               Content="Categoría:" 
                               Style="{StaticResource FormLabel}" 
                               Margin="0,8,0,0"/>
                        <TextBlock x:Name="TbCategoria" 
                                   Grid.Row="3" Grid.Column="1" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,0,0" 
                                   Style="{StaticResource BodyText}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Card de Datos de la Reserva -->
            <Border Grid.Column="1"
                    Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Datos de la Reserva" 
                               Style="{StaticResource SubtitleText}"
                               Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="Stock Disponible" Style="{StaticResource FormLabel}"/>
                            <TextBlock x:Name="TbStock" 
                                       FontSize="18" 
                                       Foreground="Green"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Precio Unitario" Style="{StaticResource FormLabel}"/>
                            <TextBlock x:Name="TbPrecio" 
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <Label Content="Nombre del Cliente" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="TxtNombreCliente" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,16"/>

                    <Label Content="Cantidad a Reservar" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="TxtCantidad" 
                             Style="{StaticResource ModernTextBox}"
                             Height="40"
                             Margin="0,0,0,24"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="BtnCancelar" 
                                Content="Cancelar" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"
                                Click="BtnCancelar_Click"/>
                        <Button x:Name="BtnReservar" 
                                Content="Confirmar Reserva" 
                                Style="{StaticResource PrimaryButton}"
                                Click="BtnReservar_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
