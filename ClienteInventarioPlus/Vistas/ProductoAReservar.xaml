<UserControl x:Class="ClienteInventarioPlus.Vistas.ProductoAReservarVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Detalles del Producto a Reservar" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="Información del Producto" FontWeight="SemiBold" FontSize="16">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Nombre:" FontWeight="Bold"/>
                        <TextBlock x:Name="TbNombre" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" FontSize="14"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Código:" FontWeight="Bold"/>
                        <TextBlock x:Name="TbCodigo" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" FontSize="14"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Descripción:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="TbDescripcion" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Margin="0,5,0,0" FontSize="14"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Categoría:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBlock x:Name="TbCategoria" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,0" FontSize="14"/>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <GroupBox Header="Datos de la Reserva" FontWeight="SemiBold" FontSize="16">
                    <StackPanel Margin="10">
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Label Content="Stock Disponible:" FontWeight="Bold"/>
                                <TextBlock x:Name="TbStock" FontSize="18" Foreground="Green"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <Label Content="Precio Unitario:" FontWeight="Bold"/>
                                <TextBlock x:Name="TbPrecio" FontSize="18"/>
                            </StackPanel>
                        </Grid>

                        <Label Content="Nombre del Cliente:" FontWeight="Bold"/>
                        <TextBox x:Name="TxtNombreCliente" Padding="5" Margin="0,0,0,15"/>

                        <Label Content="Cantidad a Reservar:" FontWeight="Bold"/>
                        <TextBox x:Name="TxtCantidad" Padding="5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnReservar" Content="Confirmar Reserva" Padding="20,10" 
                    Background="DodgerBlue" Foreground="White" FontWeight="Bold"
                    Click="BtnReservar_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Margin="10,0,0,0" Padding="20,10" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>