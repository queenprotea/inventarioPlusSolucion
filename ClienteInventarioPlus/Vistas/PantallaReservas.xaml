<UserControl x:Class="ClienteInventarioPlus.Vistas.ConsultarReservasVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="{StaticResource BackgroundColor}"
             Loaded="UserControl_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Consultar Reservas" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtBusqueda" 
                     Grid.Column="0" 
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Height="40"
                     ToolTip="Buscar reserva..."/>
            <ComboBox x:Name="CmbFiltro" 
                      Grid.Column="1" 
                      Style="{StaticResource ModernComboBox}"
                      Margin="16,0" 
                      Height="40"
                      MinWidth="220">
                <ComboBoxItem Content="Buscar por Nombre Cliente"/>
                <ComboBoxItem Content="Buscar por Nombre Producto"/>
            </ComboBox>
            <Button x:Name="BtnBuscar" 
                    Grid.Column="2" 
                    Content="Buscar" 
                    Style="{StaticResource PrimaryButton}"
                    Height="40"
                    Click="BtnBuscar_Click"/>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="DgReservas" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}"
                      SelectionChanged="DgReservas_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="2*"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="3*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                    <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaReserva, StringFormat='dd/MM/yyyy HH:mm'}" Width="2*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,24,0,0">
            <Button x:Name="BtnSeleccionar" 
                    Content="Seleccionar Reserva" 
                    Style="{StaticResource PrimaryButton}"
                    IsEnabled="False" 
                    Click="BtnSeleccionar_Click"
                    Margin="0,0,12,0"
                    ToolTip="Seleccione una reserva para ver sus detalles"/>
            <Button x:Name="BtnCancelar" 
                    Content="Regresar" 
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
