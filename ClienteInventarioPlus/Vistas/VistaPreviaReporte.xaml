<UserControl x:Class="ClienteInventarioPlus.Vistas.ReportePreviaVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Vista Previa del Reporte" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Background="White">
            <WebBrowser x:Name="PdfViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnDescargar" Content="Descargar archivo .pdf" Padding="20,10" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Click="BtnDescargar_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Margin="10,0,0,0" Padding="20,10" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>