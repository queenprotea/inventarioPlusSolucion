<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ConsultarProveedor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <!--  Definimos 3 filas  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Buscador + combo  -->
            <RowDefinition Height="*" />
            <!--  DataGrid  -->
            <RowDefinition Height="Auto" />
            <!--  Botón regresar  -->
        </Grid.RowDefinitions>

        <!--  Fila 0: Buscador y ComboBox  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Left"
            Margin="0,0,0,10"
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <Button
                BorderThickness="0"
                Click="btnBuscar_Click"
                FontSize="16"
                Height="40"
                Width="40">
                <Image Source="/Imagenes/busquedaLogo.jpg" Stretch="Uniform" />
            </Button>
            <TextBox
                FontSize="23"
                Foreground="Gray"
                Height="40"
                Margin="0,0,10,0"
                Width="300"
                x:Name="txtBuscar" />
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                Margin="150,0,0,0"
                Text="Ordenar por:" />
            <ComboBox
                FontSize="16"
                Height="40"
                Margin="10,0,0,0"
                SelectionChanged="cmbOrdenar_SelectionChanged"
                Width="200"
                x:Name="cmbOrdenar">
                <ComboBoxItem Content="Nombre" />
                <ComboBoxItem Content="Correo" />
                <ComboBoxItem Content="Telefono" />
                <ComboBoxItem Content="Direccion" />
            </ComboBox>
        </StackPanel>

        <!--  Fila 1: DataGrid  -->
        <DataGrid
            AlternatingRowBackground="White"
            AutoGenerateColumns="False"
            BorderBrush="White"
            CanUserAddRows="False"
            FontSize="15"
            Grid.Row="1"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            HorizontalGridLinesBrush="LightGray"
            ItemsSource="{Binding Proveedores}"
            Margin="20,40,20,0"
            RowBackground="White"
            x:Name="dgProveedores">

            <DataGrid.Columns>
                <!--  Columnas de texto  -->

                <DataGridTextColumn
                    Binding="{Binding Nombre}"
                    Header="Nombre"
                    Width="3*" />
                <DataGridTextColumn
                    Binding="{Binding Telefono}"
                    Header="Telefono"
                    Width="1.5*" />
                <DataGridTextColumn
                    Binding="{Binding Correo}"
                    Header="Correo"
                    Width="1.5*" />
                <DataGridTextColumn
                    Binding="{Binding Direccion}"
                    Header="Direccion"
                    Width="1.5*" />

                <!--  Columna de acciones  -->
                <DataGridTemplateColumn Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--  Fila 2: Botón Regresar  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Click="btnSeleccinar_Click"
                Content="Seleccionar"
                FontSize="20"
                Height="50"
                Width="150"
                x:Name="btnSeleccionar" />
        </StackPanel>

    </Grid>
</UserControl>
