<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ConsultarProveedor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundColor}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Consultar Proveedores"
                   Style="{StaticResource TitleText}"
                   Grid.Row="0"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Style="{StaticResource ModernTextBox}"
                FontSize="14"
                Height="40"
                Grid.Column="0"
                Margin="0,0,16,0"
                ToolTip="Buscar proveedor..."
                x:Name="txtBuscar" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock
                    Text="Ordenar por:"
                    Style="{StaticResource BodyText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0"/>
                <ComboBox
                    Style="{StaticResource ModernComboBox}"
                    FontSize="14"
                    Height="40"
                    MinWidth="180"
                    SelectionChanged="cmbOrdenar_SelectionChanged"
                    x:Name="cmbOrdenar">
                    <ComboBoxItem Content="Nombre" />
                    <ComboBoxItem Content="Correo" />
                    <ComboBoxItem Content="Telefono" />
                    <ComboBoxItem Content="Direccion" />
                </ComboBox>
                <Button
                    Style="{StaticResource PrimaryButton}"
                    Click="btnBuscar_Click"
                    Content="Buscar"
                    Height="40"
                    Margin="16,0,0,0"
                    Padding="24,10"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid
                Style="{StaticResource ModernDataGrid}"
                ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                RowStyle="{StaticResource ModernDataGridRow}"
                CellStyle="{StaticResource ModernDataGridCell}"
                ItemsSource="{Binding Proveedores}"
                x:Name="dgProveedores">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Nombre}"
                        Header="Nombre"
                        Width="3*" />
                    <DataGridTextColumn
                        Binding="{Binding Telefono}"
                        Header="Teléfono"
                        Width="1.5*" />
                    <DataGridTextColumn
                        Binding="{Binding Correo}"
                        Header="Correo"
                        Width="1.5*" />
                    <DataGridTextColumn
                        Binding="{Binding Direccion}"
                        Header="Dirección"
                        Width="1.5*" />
                    <DataGridTemplateColumn Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Margin="0,24,0,0"
            Orientation="Horizontal">
            <Button
                Style="{StaticResource SecondaryButton}"
                Click="btnRegresar_Click"
                Content="Regresar"
                Margin="0,0,12,0"
                x:Name="btnRegresar" />
            <Button
                Style="{StaticResource PrimaryButton}"
                Click="btnSeleccinar_Click"
                Content="Seleccionar"
                x:Name="btnSeleccionar" />
        </StackPanel>

    </Grid>
</UserControl>
