<UserControl
    Background="WhiteSmoke"
    Loaded="UserControl_Loaded"
    d:DesignHeight="700"
    d:DesignWidth="1170"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ConsultarProductoAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Foreground="#333"
            Grid.Row="0"
            Margin="0,0,0,15"
            Text="Gestión de Productos" />

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                FontSize="14"
                Grid.Column="0"
                Padding="5"
                ToolTip="Escriba aquí para buscar..."
                VerticalContentAlignment="Center"
                x:Name="TxtBusqueda" />
            <ComboBox
                Grid.Column="1"
                Margin="10,0"
                MinWidth="150"
                Padding="5"
                VerticalContentAlignment="Center"
                x:Name="CmbFiltro">
                <ComboBoxItem Content="Buscar por Nombre" />
                <ComboBoxItem Content="Buscar por Código" />
                <ComboBoxItem Content="Buscar por Categoría" />
            </ComboBox>
            <Button
                Click="BtnBuscar_Click"
                Content="Buscar"
                Grid.Column="2"
                Padding="20,5"
                x:Name="BtnBuscar" />
        </Grid>

        <DataGrid
            AlternatingRowBackground="LightGray"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            Grid.Row="2"
            IsReadOnly="True"
            SelectionChanged="DgProductos_SelectionChanged"
            x:Name="DgProductos">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Codigo}"
                    Header="Codigo"
                    Width="0.5*" />
                <DataGridTextColumn
                    Binding="{Binding Nombre}"
                    Header="Nombre"
                    Width="2*" />
                <DataGridTextColumn
                    Binding="{Binding NombreCategoria}"
                    Header="Categoría"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding PrecioCompra, StringFormat={}{0:C}}"
                    Header="Precio Compra"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding PrecioVenta, StringFormat={}{0:C}}"
                    Header="Precio Venta"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding Stock}"
                    Header="Stock"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding StockMinimo}"
                    Header="Stock minimo"
                    Width="Auto" />
                <DataGridTextColumn
                    Binding="{Binding Descripcion}"
                    Header="Descripción"
                    Width="3*" />
                <DataGridTextColumn
                    Binding="{Binding FirstProveedor}"
                    Header="Proveedor"
                    Width="1*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Margin="0,15,0,0"
            Orientation="Horizontal">
            <Button
                Click="BtnConsultar_Click"
                Content="Ver"
                IsEnabled="False"
                Margin="0,0,10,0"
                Padding="20,8"
                ToolTip="Seleccione un producto de la lista para modificarlo"
                x:Name="BtnConusltar" />
            <Button
                Click="BtnModificar_Click"
                Content="Modificar"
                IsEnabled="False"
                Margin="0,0,10,0"
                Padding="20,8"
                ToolTip="Seleccione un producto de la lista para modificarlo"
                x:Name="BtnModificar" />

            <Button
                Background="#D32F2F"
                BorderThickness="0"
                Click="BtnEliminar_Click"
                Content="Eliminar"
                Foreground="White"
                IsEnabled="False"
                Padding="20,8"
                ToolTip="Seleccione un producto de la lista para eliminarlo"
                x:Name="BtnEliminar" />
        </StackPanel>
    </Grid>
</UserControl>
