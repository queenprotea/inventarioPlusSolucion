<UserControl x:Class="ClienteInventarioPlus.Vistas.ReportesPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Módulo de Reportes" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="0,0,15,0" 
                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                    Click="BtnReporteInventario_Click">
                <Border CornerRadius="8" Background="#FFF0F0F0" Padding="20">
                    <Grid>
                        <TextBlock Text="Generar Reporte de Inventario" FontSize="26" FontWeight="SemiBold"
                                   VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                        <Image Source="/Imagenes/InventarioReporteIcon.png" Width="80" Height="80"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.7"/>
                    </Grid>
                </Border>
            </Button>

            <Button Grid.Column="1" Margin="15,0,0,0"
                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                    Click="BtnReporteMovimientos_Click">
                <Border CornerRadius="8" Background="#FFF0F0F0" Padding="20">
                    <Grid>
                        <TextBlock Text="Generar Reporte de Movimientos" FontSize="26" FontWeight="SemiBold"
                                   VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                        <Image Source="/Imagenes/MovimientosReporteIcon.png" Width="80" Height="80"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.7"/>
                    </Grid>
                </Border>
            </Button>
        </Grid>
    </Grid>
</UserControl>
