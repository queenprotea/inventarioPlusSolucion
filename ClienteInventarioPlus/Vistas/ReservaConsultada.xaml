<UserControl x:Class="ClienteInventarioPlus.Vistas.ReservaDetalleVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Reserva Consultada" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="25"
                BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Content="Producto:" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="TbProducto" Margin="5" FontSize="18" Foreground="#333"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Label Content="Número de Reserva:" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="TbReservaId" Margin="5" FontSize="18" Foreground="DodgerBlue"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Content="Cantidad Reservada:" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="TbCantidad" Margin="5" FontSize="18" Foreground="#333"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Label Content="Fecha y Hora:" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="TbFecha" Margin="5" FontSize="18" Foreground="#333"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnLiberar" Content="Liberar Reserva" Padding="20,10" 
                    Background="#D32F2F" Foreground="White" FontWeight="Bold"
                    Click="BtnLiberar_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Margin="10,0,0,0" Padding="20,10" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
