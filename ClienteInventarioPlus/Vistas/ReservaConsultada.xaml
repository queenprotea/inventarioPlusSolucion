<UserControl x:Class="ClienteInventarioPlus.Vistas.ReservaDetalleVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="{StaticResource BackgroundColor}"
             Loaded="UserControl_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Reserva Consultada" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,32"/>

        <!-- Card con información de la reserva -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                MaxWidth="800"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Detalles de la Reserva"
                           Style="{StaticResource SubtitleText}"
                           Margin="0,0,0,24"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Producto -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,24">
                        <Label Content="Producto" Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbProducto" 
                                   Style="{StaticResource BodyText}"
                                   FontSize="16"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Número de Reserva -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="16,0,0,24">
                        <Label Content="Número de Reserva" Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbReservaId" 
                                   Style="{StaticResource BodyText}"
                                   FontSize="16"
                                   Foreground="{StaticResource PrimaryColor}"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Cantidad Reservada -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
                        <Label Content="Cantidad Reservada" Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbCantidad" 
                                   Style="{StaticResource BodyText}"
                                   FontSize="16"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Fecha y Hora -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="16,0,0,0">
                        <Label Content="Fecha y Hora" Style="{StaticResource FormLabel}"/>
                        <TextBlock x:Name="TbFecha" 
                                   Style="{StaticResource BodyText}"
                                   FontSize="16"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,32,0,0">
                    <Button x:Name="BtnCancelar" 
                            Content="Cancelar"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"
                            Click="BtnCancelar_Click"/>
                    <Button x:Name="BtnLiberar" 
                            Content="Liberar Reserva" 
                            Style="{StaticResource DangerButton}"
                            Click="BtnLiberar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
