<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.AgregarProveedor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Título  -->
            <RowDefinition Height="Auto" />
            <!--  Nombre  -->
            <RowDefinition Height="Auto" />
            <!--  Dirección  -->
            <RowDefinition Height="Auto" />
            <!--  Teléfono  -->
            <RowDefinition Height="Auto" MinHeight="65.96" />
            <!--  Correo  -->
            <RowDefinition Height="Auto" MinHeight="85" />
            <!--  Botones  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!--  Etiquetas  -->
            <ColumnDefinition Width="*" />
            <!--  Cajas de texto  -->
        </Grid.ColumnDefinitions>

        <!--  Título  -->
        <Label
            Content="Registrar Proveedor"
            FontSize="30"
            FontWeight="Bold"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="134,10,0,10"
            Width="292" />

        <!--  Nombre  -->
        <Label
            Content="Nombre del proveedor:"
            Grid.Row="1"
            Height="26"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="0,5,0,15">
            <TextBox
                Height="30"
                Width="350"
                x:Name="nombre" />
            <TextBlock
                FontSize="12"
                Foreground="Red"
                Height="30"
                Width="350"
                x:Name="tblockErrorNombre" />
        </StackPanel>

        <!--  Dirección  -->
        <Label
            Content="Dirección:"
            Grid.Row="2"
            Height="26"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="1"
            Grid.Row="2"
            Margin="0,5,0,15">
            <TextBox
                Height="30"
                Width="350"
                x:Name="direccion" />
            <TextBlock
                FontSize="12"
                Foreground="Red"
                Height="30"
                Width="350"
                x:Name="tblockErrorDireccion" />
        </StackPanel>

        <!--  Teléfono  -->
        <Label
            Content="Teléfono:"
            Grid.Row="3"
            Height="26"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="1"
            Grid.Row="3"
            Margin="0,5,0,15">
            <TextBox
                Height="30"
                Width="350"
                x:Name="telefono" />
            <TextBlock
                FontSize="12"
                Foreground="Red"
                Height="30"
                Width="350"
                x:Name="tblockErrorTelefono" />
        </StackPanel>

        <!--  Correo  -->
        <Label
            Content="Correo:"
            Grid.Row="4"
            Height="26"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="1"
            Grid.Row="4"
            Margin="0,5,0,15">
            <TextBox
                Height="30"
                Width="350"
                x:Name="correo" />
            <TextBlock
                FontSize="12"
                Foreground="Red"
                Height="30"
                Width="350"
                x:Name="tblockErrorCorreo" />
        </StackPanel>

        <!--  Botones  -->
        <StackPanel
            Grid.Column="1"
            Grid.Row="5"
            HorizontalAlignment="Left"
            Margin="452,124,0,-94"
            Orientation="Horizontal"
            Width="260">
            <Button
                Click="clickbtnCancelar"
                Content="Cancelar"
                Height="35"
                Margin="10"
                Width="120"
                x:Name="btnCancelar" />
            <Button
                Click="BtnGuardar_OnClickbtnGuardar"
                Content="Guardar"
                Height="35"
                Width="120"
                x:Name="btnGuardar" />
        </StackPanel>
    </Grid>
</UserControl>
