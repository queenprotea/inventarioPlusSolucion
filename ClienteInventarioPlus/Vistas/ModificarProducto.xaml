<UserControl x:Class="ClienteInventarioPlus.Vistas.ModificarProductoVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="WhiteSmoke"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Modificar Producto" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Nombre del producto:"/>
                <TextBox x:Name="TxtNombreProducto" Padding="5" FontSize="14"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <Label Content="Precio de compra:"/>
                <TextBox x:Name="TxtPrecioCompra" Padding="5" FontSize="14"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10,0,10,0">
                <Label Content="Precio de venta:"/>
                <TextBox x:Name="TxtPrecioVenta" Padding="5" FontSize="14"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10,0,0,0">
                <Label Content="Código de identificación:"/>
                <TextBox x:Name="TxtCodigo" Padding="5" FontSize="14"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Descripción:"/>
                <TextBox x:Name="TxtDescripcion" Height="120" TextWrapping="Wrap" AcceptsReturn="True" 
                         Padding="5" FontSize="14" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Label Content="Categoría:"/>
                <ComboBox x:Name="CmbCategoria" Margin="0,0,0,10" Padding="5" FontSize="14"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Stock Actual:"/>
                        <TextBox x:Name="TxtStockActual" Padding="5" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Stock Mínimo:"/>
                        <TextBox x:Name="TxtStockMinimo" Padding="5" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="3" Text="Proveedores Asociados" FontSize="20" FontWeight="SemiBold" Margin="0,25,0,10"/>

        <DataGrid x:Name="DgProveedores" Grid.Row="4" IsReadOnly="True" />

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnGuardar" Content="Guardar Cambios" FontWeight="Bold" 
                    Background="Black" Foreground="White" BorderThickness="0" 
                    Padding="20,10" Margin="0,0,10,0" Click="BtnGuardar_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" 
                    Background="LightGray" BorderThickness="0" 
                    Padding="20,10" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>