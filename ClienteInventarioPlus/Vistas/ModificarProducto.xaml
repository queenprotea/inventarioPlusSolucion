<UserControl
    Background="{StaticResource BackgroundColor}"
    Loaded="UserControl_Loaded"
    d:DesignHeight="700"
    d:DesignWidth="1170"
    mc:Ignorable="d"
    x:Class="ClienteInventarioPlus.Vistas.ModificarProductoVista"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock
            Style="{StaticResource TitleText}"
            Grid.Row="0"
            Margin="0,0,0,24"
            Text="Modificar Producto" />

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="1100">
                <!-- Card Principal de Información -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Primera Fila de Campos -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <Label Content="Nombre del producto" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="TxtNombreProducto"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="40"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="12,0">
                                <Label Content="Precio de compra" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="TxtPrecioCompra"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="40"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="12,0">
                                <Label Content="Precio de venta" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="TxtPrecioVenta"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="40"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="12,0,0,0">
                                <Label Content="Código de identificación" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="TxtCodigo"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="40"/>
                            </StackPanel>
                        </Grid>

                        <!-- Segunda Fila de Campos -->
                        <Grid Grid.Row="1" Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <Label Content="Descripción" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="TxtDescripcion"
                                         Style="{StaticResource ModernTextBox}"
                                         AcceptsReturn="True"
                                         Height="120"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         VerticalContentAlignment="Top"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <Label Content="Categoría" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="CmbCategoria"
                                          Style="{StaticResource ModernComboBox}"
                                          Height="40"
                                          Margin="0,0,0,16"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Label Content="Stock Actual" Style="{StaticResource FormLabel}"/>
                                        <TextBox x:Name="TxtStockActual"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="40"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <Label Content="Stock Mínimo" Style="{StaticResource FormLabel}"/>
                                        <TextBox x:Name="TxtStockMinimo"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="40"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Card de Proveedores -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Proveedores Asociados"
                                       Style="{StaticResource SubtitleText}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <ComboBox x:Name="CmbProveedores"
                                          Style="{StaticResource ModernComboBox}"
                                          MinWidth="300"
                                          Height="40"
                                          Margin="0,0,12,0"/>
                                <Button x:Name="BtnAgregar"
                                        Content="Agregar"
                                        Style="{StaticResource PrimaryButton}"
                                        Height="40"
                                        Margin="0,0,12,0"
                                        Click="BtnAgregar_Click"/>
                                <Button x:Name="BtnEliminar"
                                        Content="Eliminar"
                                        Style="{StaticResource DangerButton}"
                                        Height="40"
                                        Click="BtnEliminar_Click"/>
                            </StackPanel>
                        </Grid>

                        <DataGrid x:Name="DgProveedores"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                  RowStyle="{StaticResource ModernDataGridRow}"
                                  CellStyle="{StaticResource ModernDataGridCell}"
                                  Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Nombre}"
                                                    Header="Nombre"
                                                    Width="*" />
                                <DataGridTextColumn Binding="{Binding Telefono}"
                                                    Header="Teléfono"
                                                    Width="*" />
                                <DataGridTextColumn Binding="{Binding Direccion}"
                                                    Header="Dirección"
                                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,24,0,0">
                            <Button x:Name="BtnCancelar"
                                    Content="Cancelar"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,12,0"
                                    Click="BtnCancelar_Click"/>
                            <Button x:Name="BtnGuardar"
                                    Content="Guardar Cambios"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnGuardar_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
