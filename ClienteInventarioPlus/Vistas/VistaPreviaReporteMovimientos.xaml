<UserControl x:Class="ClienteInventarioPlus.Vistas.ReportePreviaMovimientosVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1170"
             Background="{StaticResource BackgroundColor}"
             Loaded="UserControl_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Vista Previa del Reporte de Movimientos" 
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,24"/>

        <!-- Visor PDF -->
        <Border Grid.Row="1" 
                Style="{StaticResource Card}"
                Padding="0">
            <WebBrowser x:Name="PdfViewer"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
        </Border>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,24,0,0">
            <Button x:Name="BtnCancelar" 
                    Content="Cancelar"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    Click="BtnCancelar_Click"/>
            <Button x:Name="BtnDescargar" 
                    Content="Descargar PDF" 
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnDescargar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
