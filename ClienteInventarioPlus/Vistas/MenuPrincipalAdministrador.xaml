<UserControl x:Class="ClienteInventarioPlus.Vistas.MenuPrincipalAdministrador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200" MaxWidth="280"/>
            <!-- Barra lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Área de contenido -->
        </Grid.ColumnDefinitions>

        <!-- Barra lateral -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryColor}">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical">
                <!-- Logo -->
                <Border Background="{StaticResource PrimaryLightColor}" Padding="16,20">
                    <TextBlock Text="InventarioPlus"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource SurfaceColor}"
                               TextAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Menú de Navegación -->
                <StackPanel Margin="0,16,0,0">
                    <Button x:Name="BtnProductos" 
                            Style="{StaticResource SidebarButton}"
                            Click="BtnProductos_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgProductos" 
                                      Data="M2,10.96C1.5,10.68 1.35,10.07 1.63,9.59L3.13,7C3.24,6.8 3.41,6.66 3.6,6.58L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.66,6.72 20.82,6.88 20.91,7.08L22.36,9.6C22.64,10.08 22.47,10.69 22,10.96L21,11.54V16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V11.54L2,10.96M12,4.15L6.04,7.5L12,10.85L17.96,7.5L12,4.15M5,15.91L11,19.29V12.58L5,9.21V15.91M19,15.91V9.21L13,12.58V19.29L19,15.91Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Productos" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnMovimientos" 
                            Style="{StaticResource SidebarButton}"
                            Margin="0,4,0,0"
                            Click="BtnMovimientos_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgMovimientos" 
                                      Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.9L16.2,16.2Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Movimientos" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnReservas" 
                            Style="{StaticResource SidebarButton}"
                            Margin="0,4,0,0"
                            Click="BtnReservas_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgReservas" 
                                      Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Reservas" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnReportes" 
                            Style="{StaticResource SidebarButton}"
                            Margin="0,4,0,0"
                            Click="BtnReportes_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgReportes" 
                                      Data="M9,17H7V10H9M13,17H11V7H13M17,17H15V13H17M19.5,19.1H4.5V5H19.5M19.5,3H4.5C3.4,3 2.5,3.9 2.5,5V19.1C2.5,20.2 3.4,21.1 4.5,21.1H19.5C20.6,21.1 21.5,20.2 21.5,19.1V5C21.5,3.9 20.6,3 19.5,3Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Reportes" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnProveedores" 
                            Style="{StaticResource SidebarButton}"
                            Margin="0,4,0,0"
                            Click="BtnProveedores_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgProveedores" 
                                      Data="M12,5.5A3.5,3.5 0 0,1 15.5,9A3.5,3.5 0 0,1 12,12.5A3.5,3.5 0 0,1 8.5,9A3.5,3.5 0 0,1 12,5.5M5,8C5.56,8 6.08,8.15 6.53,8.42C6.38,9.85 6.8,11.27 7.66,12.38C7.16,13.34 6.16,14 5,14A3,3 0 0,1 2,11A3,3 0 0,1 5,8M19,8A3,3 0 0,1 22,11A3,3 0 0,1 19,14C17.84,14 16.84,13.34 16.34,12.38C17.2,11.27 17.62,9.85 17.47,8.42C17.92,8.15 18.44,8 19,8M5.5,18.25C5.5,16.18 8.41,14.5 12,14.5C15.59,14.5 18.5,16.18 18.5,18.25V20H5.5V18.25M0,20V18.5C0,17.11 1.89,15.94 4.45,15.6C3.86,16.28 3.5,17.22 3.5,18.25V20H0M24,20H20.5V18.25C20.5,17.22 20.14,16.28 19.55,15.6C22.11,15.94 24,17.11 24,18.5V20Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Proveedores" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnUsuarios" 
                            Style="{StaticResource SidebarButton}"
                            Margin="0,4,0,0"
                            Click="BtnUsuarios_Click">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                                <Path x:Name="ImgUsuarios" 
                                      Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                                      Fill="White" 
                                      Stretch="Uniform"/>
                            </Viewbox>
                            <TextBlock Text="Usuarios" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Separador -->
                <Border Height="1" 
                        Background="#424242" 
                        Margin="16,32"/>

                <!-- Cerrar Sesión -->
                <Button Style="{StaticResource SidebarButton}"
                        Click="BtnCerrarSesion_Click">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="24" Height="24" Margin="0,0,8,0">
                            <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z" 
                                  Fill="White" 
                                  Stretch="Uniform"/>
                        </Viewbox>
                        <TextBlock Text="Cerrar Sesión" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="150"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Área de contenido -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundColor}">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</UserControl>
