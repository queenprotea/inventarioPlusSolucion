<UserControl x:Class="ClienteInventarioPlus.Vistas.ConsultarUsuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Gestión de Usuarios"
                   Style="{StaticResource TitleText}"
                   Grid.Row="0"
                   Margin="0,0,0,24"/>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtBuscar" 
                     Style="{StaticResource ModernTextBox}"
                     FontSize="14"
                     Height="40"
                     Grid.Column="0"
                     Margin="0,0,16,0"
                     ToolTip="Buscar usuario..."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Ordenar por:" 
                           Style="{StaticResource BodyText}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="cmbOrdenar" 
                          Style="{StaticResource ModernComboBox}"
                          FontSize="14"
                          Height="40"
                          MinWidth="180"
                          SelectionChanged="cmbOrdenar_SelectionChanged">
                    <ComboBoxItem Content="ID"/>
                    <ComboBoxItem Content="Nombre"/>
                    <ComboBoxItem Content="Usuario"/>
                    <ComboBoxItem Content="Rol"/>
                </ComboBox>
                <Button Style="{StaticResource PrimaryButton}"
                        Click="btnBuscar_Click"
                        Content="Buscar"
                        Height="40"
                        Margin="16,0,0,0"
                        Padding="24,10"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Padding="0">
            <DataGrid x:Name="dgUsuarios" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                      RowStyle="{StaticResource ModernDataGridRow}"
                      CellStyle="{StaticResource ModernDataGridCell}"
                      ItemsSource="{Binding Usuarios}">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UsuarioID}" Width="0.25*" />
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}" Width="*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="*"/>
                    
                    <DataGridTemplateColumn Width="220" Header="Acciones">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource SecondaryButton}"
                                            Content="Modificar"
                                            FontSize="13"
                                            Margin="4" 
                                            Padding="14,9"
                                            Click="BtnModificar_Click"/>
                                    <Button Style="{StaticResource DangerButton}"
                                            Content="Eliminar"
                                            FontSize="13"
                                            Margin="4" 
                                            Padding="14,9"
                                            Click="BtnEliminar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones de acción -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="3"
                    Margin="0,24,0,0">
            <Button x:Name="BtnRegresar"
                    Style="{StaticResource SecondaryButton}"
                    Content="Regresar" 
                    Click="btnRegresar_Click"/>
        </StackPanel>
        
    </Grid>
</UserControl>
