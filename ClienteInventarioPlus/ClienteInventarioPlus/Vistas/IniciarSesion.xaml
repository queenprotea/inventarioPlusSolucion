<UserControl x:Class="ClienteInventarioPlus.Vistas.IniciarSesion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClienteInventarioPlus.Vistas"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1440">
    <Grid>
        <StackPanel Grid.Row="0" Margin="0,5,0,19" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <TextBlock x:Name="tblockNombreSistema" 
           Text="InventarioPlus" 
           FontSize="80" 
           FontWeight="Bold" 
           Foreground="#23272F" 
           TextAlignment="Center" />

        </StackPanel>

        <Border CornerRadius="18" Margin="446,116,446,100" Panel.ZIndex="1" Background="#CCFFFFFF" >
            <Border.Effect>
                <DropShadowEffect Color="Black"
                          BlurRadius="10"
                          ShadowDepth="4"
                          Opacity="0.3"/>
            </Border.Effect>
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>



                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Margin="0,0,0,28" HorizontalAlignment="Center">
                    <TextBlock x:Name="tblockTitulo" 
                           Text="Iniciar Sesion" 
                           FontSize="60" 
                           FontWeight="Bold" 
                           Foreground="#23272F" 
                           TextAlignment="Center" />
                    <TextBlock x:Name="tblockSubtitulo" 
                           Text="Introduce tu nombre de usuario y contraseña" 
                           FontSize="23" 
                           Foreground="#23272F" 
                           Margin="0,5,0,0"
                           TextAlignment="Center"/>
                </StackPanel>

                <!-- Contenido -->
                <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="472" Height="Auto">
                    <TextBlock x:Name="tblockNombreUsuario" Text="Nombre de Usuario" FontWeight="SemiBold" Margin="0,0,0,10" FontSize="20"/>
                    <TextBox x:Name="tbUserName" Height="47" Padding="10,5" 
                         BorderBrush="#cad1e1" BorderThickness="1"
                         Background="#f6f8fa" />
                    <TextBlock x:Name="tblockErrorUserName" Text="" Foreground="Red" FontSize="12"/>

                    <TextBlock x:Name="tblockContrasena" Text="Contraseña" FontWeight="SemiBold" Margin="0,10,0,6" FontSize="20"/>
                    <Grid>
                        <PasswordBox x:Name="pbPassword" Height="47" Padding="10" 
                             BorderBrush="#cad1e1" BorderThickness="1" 
                             Background="#f6f8fa" Margin="0,0,40,0"
                             Visibility="Visible" />
                        <TextBox x:Name="tbPasswordVisible" Height="47" Margin="0,0,40,0" Padding="10,5,10,10"
                             BorderBrush="#cad1e1" BorderThickness="1" 
                             Background="#f6f8fa" 
                             VerticalAlignment="Center" Visibility="Collapsed"/>
                        <Button x:Name="btnVerPassword" Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                            
                            Content="👁"
                            Background="Black" Foreground="White" Margin="437,0,0,8" Click="btnVerPassword_Click"/>
                    </Grid>
                    <TextBlock x:Name="tblockErrorPassword" Text="" Margin="0,0,0,8" Foreground="Red" FontSize="12" VerticalAlignment="Bottom"/>
                    <Button x:Name="btnIniciarSesion" Content="Iniciar Sesión"
                        Background="Black"
                            Foreground="White"
                        Height="42" Margin="0,0,0,18" FontWeight="Bold" FontSize="18" Click="btnIniciarSesion_Click"/>

                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
